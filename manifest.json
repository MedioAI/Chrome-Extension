{
  "manifest_version": 3,
  "name": "MedioAI: Enhance Udio",
  "version": "1.4",
  "description": "Write lyrics with Song Studio, Tag Builder, AI (OpenAI / Claude) Co-Writer, Audio Tools, 5k+ Premade Tags, Commands & More!",
  "permissions": ["storage", "unlimitedStorage"],
  "background": {
    "service_worker": "engine/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icon/48x48.png",
      "128": "icon/128x128.png"
    }
  },
  "icons": {
    "16": "icon/16x16.png",
    "48": "icon/48x48.png",
    "128": "icon/128x128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*", "sounds/*", "database/*", "dj/*", "icon/*", "app/admin/admin.json"],
      "matches": ["https://www.udio.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.udio.com/*"],
      "js": [
        "lib/streammixer.js",
        "lib/quill.js",
        "engine/utilities.js",
        "engine/ui/icons.js",
        "engine/ui/udio.js",
        "engine/ui/pagination.js",
        "engine/audio_notification.js",
        "engine/api_calls.js",
        "engine/song_studio.js",
        "engine/tag_builder.js",
        "engine/track-counter.js",
        "engine/radio.js",
        "engine/udio.js"
      ],
      "css": ["engine/engine.css", "lib/quilljs.css"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval'; child-src 'self';"
  }
}
