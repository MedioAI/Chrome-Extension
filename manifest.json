{
  "manifest_version": 3,
  "name": "MedioAI: Your Music Companion",
  "author": "Wynter Jones (@AI.MASSIVE)",
  "version": "1.0",
  "description": "Get notified when your Udio & Suno tracks are ready & enjoy effortless lyric writing with our Lyric Manager. Pre-made [commands], find rhymes & craft tags with the Tag Builder.",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "engine/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icon/48x48.png",
      "128": "icon/128x128.png"
    }
  },
  "icons": {
    "16": "icon/16x16.png",
    "48": "icon/48x48.png",
    "128": "icon/128x128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*", "sounds/*", "database/*", "icon/*"],
      "matches": ["https://www.udio.com/*", "https://www.suno.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.udio.com/*"],
      "js": [
        "lib/quill.js",
        "engine/utilities.js",
        "engine/ui/icons.js",
        "engine/ui/udio.js",
        "engine/ui/pagination.js",
        "engine/audio_notification.js",
        "engine/api_calls.js",
        "engine/song_studio.js",
        "engine/tag_builder.js",
        "engine/engine.js"
      ],
      "css": ["engine/engine.css", "lib/quilljs.css"]
    },
    {
      "matches": ["https://www.suno.com/*"],
      "js": [
        "lib/quill.js",
        "engine/utilities.js",
        "engine/ui/icons.js",
        "engine/ui/suno.js",
        "engine/ui/pagination.js",
        "engine/audio_notification.js",
        "engine/api_calls.js",
        "engine/song_studio.js",
        "engine/tag_builder.js",
        "engine/engine.js"
      ],
      "css": ["engine/engine.css", "lib/quilljs.css"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval'; child-src 'self';"
  }
}
